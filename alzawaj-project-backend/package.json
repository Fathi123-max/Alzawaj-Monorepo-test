{
  "name": "zawag-backend",
  "version": "1.0.0",
  "description": "Backend API for Islamic Marriage Platform (Zawag) - Node.js + Express + MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts,json src/server.ts",
    "build": "rm -rf dist && tsc --noEmitOnError false --skipLibCheck true || true && cp src/config/openapi.yaml dist/config/",
    "build:watch": "tsc --watch",
    "prerender": "pnpm run build",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:seed": "node dist/database/seeders/index.js",
    "db:migrate": "node dist/database/migrations/index.js",
    "deploy": "pnpm run build && pm2 start ecosystem.config.js",
    "logs": "pm2 logs zawag-api",
    "restart": "pm2 restart zawag-api",
    "stop": "pm2 stop zawag-api",
    "health-check": "ts-node scripts/health-check.ts",
    "test-registration": "ts-node scripts/test-registration.ts",
    "test-valid-registration": "ts-node scripts/test-valid-registration.ts",
    "comprehensive-test": "ts-node scripts/comprehensive-test.ts",
    "check-rate-limit": "ts-node scripts/check-rate-limit.ts",
    "test-login": "ts-node scripts/test-login.ts",
    "monitor-rate-limit": "ts-node scripts/monitor-rate-limit.ts"
  },
  "keywords": [
    "islamic",
    "marriage",
    "zawag",
    "nodejs",
    "express",
    "mongodb",
    "api",
    "rest"
  ],
  "author": "Zawag Development Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "compromise": "^14.10.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.0.0",
    "excel4node": "^1.8.2",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-ipfilter": "^1.3.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.0",
    "firebase-admin": "^13.6.0",
    "geolib": "^3.3.4",
    "helmet": "^7.0.0",
    "imagekit": "^6.0.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-hijri": "^2.1.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.6.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.2",
    "sentiment": "^5.0.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-session": "^1.18.2",
    "@types/express-slow-down": "^2.0.0",
    "@types/express-validator": "^3.0.2",
    "@types/helmet": "^4.0.0",
    "@types/imagekit": "^3.2.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.15",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.15.3",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/src/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/tests/**",
      "!src/server.ts",
      "!src/database/seeders/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MMansy19/zawag-backend.git"
  },
  "bugs": {
    "url": "https://github.com/MMansy19/zawag-backend/issues"
  },
  "homepage": "https://github.com/MMansy19/zawag-backend#readme"
}
