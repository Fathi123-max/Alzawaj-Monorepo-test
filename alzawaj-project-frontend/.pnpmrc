# See https://pnpm.io/pnpm-cli for more information about pnpm

# Ignore workspace root check to allow adding deps at runtime
ignore-workspace-root-check = true

# Always prefer using pnpm for consistency
prefer-workspace-packages = true

# Use strict peer dependencies
strict-peer-dependencies = false

# Enable link-workspace-packages by default
link-workspace-packages = true

# Enable save-workspace-protocol by default
save-workspace-protocol = true